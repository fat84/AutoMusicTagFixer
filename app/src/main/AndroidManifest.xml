<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.dev.franco.automusictagfixer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation|screenSize"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="mx.dev.franco.automusictagfixer.SplashActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mx.dev.franco.automusictagfixer.ScreenSlidePagerActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme" />
        <activity
            android:name="mx.dev.franco.automusictagfixer.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_folder_choser"
            android:launchMode="singleTop"
            android:theme="@style/MainActivityTheme" />
        <activity
            android:name="mx.dev.franco.automusictagfixer.QuestionsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/faq"
            android:parentActivityName="mx.dev.franco.automusictagfixer.MainActivity"
            android:theme="@style/QuestionsTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mx.dev.franco.automusictagfixer.MainActivity" />
        </activity>
        <activity
            android:name="mx.dev.franco.automusictagfixer.TrackDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="mx.dev.franco.automusictagfixer.MainActivity"
            android:theme="@style/DetailsTrackDialogTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mx.dev.franco.automusictagfixer.MainActivity" />
        </activity>

        <activity
            android:name="mx.dev.franco.automusictagfixer.ScrollingAboutActivity"
            android:label="@string/title_activity_scrolling_about"
            android:parentActivityName="mx.dev.franco.automusictagfixer.MainActivity"
            android:theme="@style/AboutTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mx.dev.franco.automusictagfixer.MainActivity" />
        </activity>
        <activity
            android:name="mx.dev.franco.automusictagfixer.SettingsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_settings"
            android:parentActivityName="mx.dev.franco.automusictagfixer.MainActivity"
            android:theme="@style/SettingsStyle" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="mx.dev.franco.automusictagfixer.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- We need this service for checking internet connection and handling the gracenote api initialization -->
        <service
            android:name="mx.dev.franco.automusictagfixer.services.DetectorInternetConnection"
            android:label="DetectionService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service
            android:name="mx.dev.franco.automusictagfixer.services.FixerTrackService"
            android:label="FixerTrackService">

        </service>

        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


    </application>

</manifest>