<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/true_white"
    android:transitionName="openDetails"
    tools:context="mx.dev.franco.musicallibraryorganizer.DetailsTrackDialogActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:theme="@style/ToolbarStyle"
            app:layout_collapseMode="parallax"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/toolbarCover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:transitionName="transitionFragment"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <FrameLayout
                android:id="@+id/blackTransparentLayer"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.8"
                    android:background="@drawable/linear_gradient_black_to_transparent" />

                <TextView
                    android:id="@+id/subtitleTransparentLayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/ic_folder_white_24px"
                    android:gravity="center_vertical"
                    android:text="Path"
                    android:textColor="@color/true_white" />

                <TextView
                    android:id="@+id/titleTransparentLayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/ic_description_white_24px"
                    android:gravity="center_vertical"
                    android:text="File Name"
                    android:textColor="@color/true_white"
                    android:textSize="18sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/blackTransparentLayer2"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.8"
                    android:background="@drawable/linear_gradient_transparent_to_black" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_vertical"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/ic_star_border_white_24px"
                    android:gravity="center_vertical"
                    android:text="status"
                    android:textColor="@color/true_white" />

                <TextView
                    android:id="@+id/trackLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left|right"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/ic_access_time_white_24px"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="0"
                    android:textAlignment="viewStart"
                    android:textColor="@color/true_white"
                    android:visibility="visible" />

            </FrameLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="4dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_details_track" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/saveInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:src="@drawable/ic_save_white_24px"
        android:visibility="gone"
        app:fab_colorNormal="@color/md_red_800"
        app:fab_showShadow="true"
        app:layout_anchor="@+id/floatingActionMenu"
        app:layout_anchorGravity="bottom|right"
        fab:fab_size="normal" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floatingActionMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="8dp"
        app:elevation="8dp"
        app:borderWidth="0dp"
        app:menu_colorNormal="@color/md_red_800"
        app:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/downloadCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cloud_download_white_24px"
            app:fab_colorNormal="@color/grey_600"
            app:fab_showShadow="true"
            fab:fab_label="Descargar carÃ¡tula"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/playPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_arrow_white_24px"
            app:fab_colorNormal="@color/grey_600"
            app:fab_showShadow="true"
            fab:fab_label="Escuchar"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/editTrackInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_white_24px"
            app:fab_colorNormal="@color/grey_600"
            app:fab_showShadow="true"
            fab:fab_label="Editar"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/autoFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_build_white_24px"
            app:fab_colorNormal="@color/grey_600"
            app:fab_showShadow="true"
            fab:fab_label="Autocorregir"
            fab:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>



    <FrameLayout
        android:id="@+id/containerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</android.support.design.widget.CoordinatorLayout>