<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_select_folder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mx.dev.franco.musicallibraryorganizer.SelectFolderActivity"
    tools:showIn="@layout/app_bar_select_folder">

    <android.support.v7.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/search_view_style"
        android:gravity="end"
        android:queryHint="@string/placeholder_search"
        android:visibility="gone"
        app:defaultQueryHint="@string/placeholder_search"
        app:queryHint="@string/placeholder_search" />

    <RelativeLayout
        android:id="@+id/loadingMetadataLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/retrievingMetadata"
            style="?android:attr/progressBarStyle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/retrievingMetadataInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/retrievingMetadata"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="@string/retrieving_metadata" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/searching"
        style="?android:attr/progressBarStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible" />

    <LinearLayout
            android:id="@+id/list_of_files"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:weightSum="1"
        android:layout_below="@+id/loadingMetadataLayout">

        <ListView
            android:id="@+id/list_view_songs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:clipToPadding="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingBottom="80dp"
            android:scrollbarStyle="outsideOverlay" />
        </LinearLayout>


    <TableLayout
        android:id="@+id/reloadButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searching"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/searchView"
        android:visibility="invisible">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:id="@+id/no_files_found"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:minLines="2"
                android:text="@string/try_again_permission"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        </TableRow>

        <TableRow
            android:id="@+id/search_edit_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:onClick="onClickReloadList"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_refresh_black_24dp" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
